<%- include("header.ejs") %>
    <div class="tab-content active">
        <form method="post">
            <div class="top-row">
                <div class="amount">
                    <p>Amount</p>
                    <input type="number" value="1.00" name="amount">
                </div>
                <div>
                    <div>
                    <!-- <div class="from"> -->
                        <p>From</p>
                        <div class="wrapper">
                            <div class="select-btn">
                                <span>Select Currency</span>
                                <ion-icon name="chevron-down-outline"></ion-icon>
                            </div>
                            <div class="content">
                                <div class="search" id="search">
                                    <ion-icon name="search-outline"></ion-icon>
                                    <input spellcheck="false" type="text" placeholder="Search">
                                </div>
                                <ul class="options" id="currencyList">
                                    <div class="scrollable-line">
                                    <% currencies.forEach(currency => { %>
                                        <li value="<%= currency.Code %>"><span><b><%= currency.Code %></b> &nbsp;-&nbsp;<%= currency.Name %></span></li>
                                    <% }); %>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class = "drop-list">
                        <div class="icon">
                            <ion-icon name="swap-horizontal-outline"></ion-icon>
                        </div>
                    </div>
                    <div class="drop-list">
                    <div class="to">
                        <p>To</p>
                        <div class="select-box">
                            <img src="/images/flags/eu.png" alt="flag">
                            <select type="text" name="toCurrency">
                                <% currencies.forEach(currency => { %>
                                    <% var selected = currency.Code === "EUR" ? "selected" : ""; %>
                                    <option value="<%= currency.Code %>" <%= selected %>><%= currency.Code %> - <%= currency.Name %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-row">
                <div class="exchange-rate"><%= famount.toFixed(2) %> <%= funit %> = <%= tamount.toFixed(4) %> <%= tunit %></div>
                <button type="submit" value="GET" class="convert-button" formaction="/convert">Convert</button>
            </div>
        </form>
    </div>

<%- include("footer.ejs") %>

