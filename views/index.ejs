<%- include("header.ejs") %>
    <div class="tab-content active">
        <form method="post">
            <div class="top-row">
                <div class="amount">
                    <p>Amount</p>
                    <input type="number" value="1.00" name="amount">
                </div>
                <div class="drop-list">
                    <div class="from">
                        <p>From</p>
                        <div class="select-box">
                            <img src="/images/flags/gb.png" alt="flag">
                            <select type="text" name="fromCurrency">
                                <option value="GBP">GBP</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="JPY">JPY</option>
                                <option value="CNY">CNY</option>
                                <option value="MYR">MYR</option>
                            </select>
                        </div>
                    </div>
                    <div class="icon">
                        <ion-icon name="swap-horizontal-outline"></ion-icon>
                    </div>
                    <div class="to">
                        <p>To</p>
                        <div class="select-box">
                            <img src="/images/flags/eu.png" alt="flag">
                            <select type="text" name="toCurrency">
                                <option value="EUR">EUR</option>
                                <option value="GBP">GBP</option>
                                <option value="USD">USD</option>
                                <option value="JPY">JPY</option>
                                <option value="CNY">CNY</option>
                                <option value="MYR">MYR</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-row">
                <div class="exchange-rate"><%= content.toFixed(4) %> <%= unit %></div>
                <button type="submit" value="GET" class="convert-button" formaction="/convert">Convert</button>
            </div>
        </form>
    </div>

<%- include("footer.ejs") %>

