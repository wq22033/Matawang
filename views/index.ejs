<%- include("header.ejs") %>
    <div class="tab-content active">
        <form action="#">
            <div class="top-row">
                <div class="amount">
                    <p>Amount</p>
                    <input type="number" value="1.00">
                </div>
                <div class="drop-list">
                    <div class="from">
                        <p>From</p>
                        <div class="select-box">
                            <img src="/images/flags/gb.png" alt="flag">
                            <select>
                                <option value="GBP">GBP</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="JPY">JPY</option>
                                <option value="CNY">CNY</option>
                                <option value="MYR">MYR</option>
                            </select>
                        </div>
                    </div>
                    <div class="swap">
                        <button type="button" class="swap-button">
                            <ion-icon name="swap-horizontal-outline"></ion-icon>
                        </button>
                    </div>
                    <div class="to">
                        <p>To</p>
                        <div class="select-box">
                            <img src="/images/flags/eu.png" alt="flag">
                            <select>
                                <option value="EUR">EUR</option>
                                <option value="GBP">GBP</option>
                                <option value="USD">USD</option>
                                <option value="JPY">JPY</option>
                                <option value="CNY">CNY</option>
                                <option value="MYR">MYR</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-row">
                <div class="exchange-rate">1 GBP = 1.17 EUR</div>
                <button type="submit" class="convert-button">Convert</button>
            </div>
        </form>
    </div>

    <p class="custom-font">USD to EUR: <%=content.toFixed(4)%></p>
<%- include("footer.ejs") %>

