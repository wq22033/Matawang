<%- include("header.ejs") %>
    <div class="tab-content active">
        <form method="post">
            <div class="top-row">
                <div class="amount">
                    <p>Amount</p>
                    <input type="number" value="1.00" name="amount">
                </div>
                <div class="from">
                    <p>From</p>
                    <div class="wrapper fwrapper">
                        <div class="select-btn f-btn">
                            <img src="/images/flags/<%= fCountry %>.png" alt="<%= fCode %>">
                            <span style="padding-left: 7px;"><b><%= fCode %></b> &nbsp;-&nbsp;<%= fName %></span>
                            <input id="fromCurrencyCode" type="hidden" name="fromCurrency" value="<%= fCode %>">
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </div>
                        <div class="content">
                            <div class="search" id="search">
                                <ion-icon name="search-outline"></ion-icon>
                                <input spellcheck="false" type="text" placeholder="Search">
                            </div>
                            <ul class="options foptions" type="text" id="fromCurrencyList">
                                <% currencies.forEach(currency => { %>
                                    <% if (currency.Countries.length != 0) { %>
                                        <li onclick="updateName('from',this)" code="<%= currency.Code %>" >
                                            <img src="/images/flags/<%= currency.Countries[0].toLowerCase() %>.png" alt="<%= currency.Code %>">
                                            <span style="padding-left: 7px;"><b><%= currency.Code %></b> &nbsp;-&nbsp;<%= currency.Name %></span>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class = "swap">
                    <div class="icon">
                        <ion-icon name="swap-horizontal-outline"></ion-icon>
                    </div>
                </div>
                <div class="to">
                    <p>To</p>
                    <div class="wrapper twrapper">
                        <div class="select-btn t-btn">
                            <img src="/images/flags/<%= tCountry %>.png" alt="<%= tCode %>">
                            <span style="padding-left: 7px;"><b><%= tCode %></b> &nbsp;-&nbsp;<%= tName %></span>
                            <input id="toCurrencyCode" type="hidden" name="toCurrency" value="<%= tCode %>">
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        </div>
                        <div class="content">
                            <div class="search" id="search">
                                <ion-icon name="search-outline"></ion-icon>
                                <input spellcheck="false" type="text" placeholder="Search">
                            </div>
                            <ul class="options toptions" id="currencyList">
                                <% currencies.forEach(currency => { %>
                                    <% if (currency.Countries.length != 0) { %>
                                        <li onclick="updateName('to',this)"" code="<%= currency.Code %>">
                                            <img src="/images/flags/<%= currency.Countries[0].toLowerCase() %>.png" alt="<%= currency.Code %>">
                                            <span style="padding-left: 7px;"><b><%= currency.Code %></b> &nbsp;-&nbsp;<%= currency.Name %></span>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-row">
                <div class="rate">
                    <span style="font-size: 20px;"><%= fAmount.toFixed(2) %> <%= fName %>&nbsp;=</span>
                    <br>
                    <span style="font-size: 40px; font-weight: 900;">
                        <%= Number(tAmount).toFixed(2) %><span style="color: rgb(183, 178, 178);"><%= String(Number(tAmount).toFixed(6)).split('.')[1].substring(2) %></span>
                        <%= tName %>
                    </span>
                </div>
                <button type="submit" value="GET" class="convert-button" formaction="/convert">Convert</button>
            </div>
        </form>
    </div>

<%- include("footer.ejs") %>

