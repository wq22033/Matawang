<%- include("header.ejs") %>
    <div class="tab-content active">
        <form method="post">
            <div class="top-row">
                <div class="amount">
                    <p>Amount</p>
                    <input type="number" value="1.00" name="amount">
                </div>
                    <div class="from">
                        <p>From</p>
                        <div class="wrapper fwrapper">
                            <div class="select-btn f-btn">
                                <div style="display: flex;">
                                    <img src="/images/flags/gb.png" alt="GBP">
                                    <span style="padding-left: 7px;">GBP - British Pound</span>
                                </div>
                                <ion-icon name="chevron-down-outline"></ion-icon>
                            </div>
                            <div class="content">
                                <div class="search" id="search">
                                    <ion-icon name="search-outline"></ion-icon>
                                    <input spellcheck="false" type="text" placeholder="Search">
                                </div>
                                <ul class="options foptions" id="currencyList">
                                    <div>
                                        <% currencies.forEach(currency => { %>
                                            <% let selected = currency.Code === "EUR" ? "selected" : ""; %>
                                            <li onclick="updateName('from',this)"" code="<%= currency.Code %>"><span><b><%= currency.Code %></b> &nbsp;-&nbsp;<%= currency.Name %></span></li>
                                        <% }); %>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                <div class = "swap">
                    <div class="icon">
                        <ion-icon name="swap-horizontal-outline"></ion-icon>
                    </div>
                </div>
                <div class="to">
                    <p>To</p>
                    <div class="wrapper twrapper">
                        <div class="select-btn t-btn">
                            <div style="display: flex;">
                                <img src="/images/flags/eu.png" alt="EUR">
                                <span style="padding-left: 7px;">EUR - Euro</span>
                            </div>
                            <ion-icon name="chevron-down-outline"></ion-icon>
                        
                        </div>
                        <div class="content">
                            <div class="search" id="search">
                                <ion-icon name="search-outline"></ion-icon>
                                <input spellcheck="false" type="text" placeholder="Search">
                            </div>
                            <ul class="options toptions" id="currencyList">
                                <div class="scrollable-line">
                                <% currencies.forEach(currency => { %>
                                    <% let selected = currency.Code === "EUR" ? "selected" : ""; %>
                                    <li onclick="updateName('to',this)" code="<%= currency.Code %>"><span><b><%= currency.Code %></b> &nbsp;-&nbsp;<%= currency.Name %></span></li>
                                <% }); %>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-row">
                <div class="rate">
                    <span style="font-size: 20px;"><%= famount.toFixed(2) %> <%= funit %>&nbsp;=</span>
                    <br>
                    <span style="font-size: 50px; font-weight: 900;"><%= tamount.toFixed(6) %> <%= tunit %></span>
                </div>
                <button type="submit" value="GET" class="convert-button" formaction="/convert">Convert</button>
            </div>
        </form>
    </div>

<%- include("footer.ejs") %>

